; standard interval names

DEFINE: iv_uni = 0i
DEFINE: iv_min2 = 1i
DEFINE: iv_maj2 = 2i
DEFINE: iv_aug2 = 3i
DEFINE: iv_min3 = 3i
DEFINE: iv_maj3 = 4i
DEFINE: iv_p4 = 5i
DEFINE: iv_aug4 = 6i
DEFINE: iv_tritone = 6i
DEFINE: iv_dim5 = 6i
DEFINE: iv_p5 = 7i
DEFINE: iv_min6 = 8i
DEFINE: iv_maj6 = 9i
DEFINE: iv_aug6 = 10i
DEFINE: iv_min7 = 10i
DEFINE: iv_maj7 = 11i
DEFINE: iv_oct = 12i

DEFINE: iv_step = [iv_maj2, iv_min2]

; this is fairly standard across Western music, but certain
; time periods use definitely definitions of consonance (e.g. a 4th)
; Use with caution!
DEFINE: consonantIntervals = [iv_uni, iv_min3, iv_maj3, iv_p4, iv_p5, iv_min6, iv_maj6]
DEFINE: isConsonant(i) = flatten(i) in consonantIntervals
DEFINE: isConsonantP(p1, p2) = isConsonant(interval-bt(p1, p2))
DEFINE: isDissonant(i) = not isConsonant(i)
DEFINE: isDissonantP(p1, p2) = not isConsonantP(p1, p2)
