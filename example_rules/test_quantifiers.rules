DECLARE VOICES: voice1
DECLARE LENGTH: 7

REQUIRE: forall iv in sc_minor, 
    exists p in pitches-of voice1 where 
    interval-bt(C4, p) is iv
REQUIRE: contour-of voice1 at t > 0i up
REQUIRE: p >= C4
REQUIRE: p <= C5


