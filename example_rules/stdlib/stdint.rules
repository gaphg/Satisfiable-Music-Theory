; standard interval names

DEFINE: uni = 0i
DEFINE: min2 = 1i
DEFINE: maj2 = 2i
DEFINE: aug2 = 3i
DEFINE: min3 = 3i
DEFINE: maj3 = 4i
DEFINE: p4 = 5i
DEFINE: aug4 = 6i
DEFINE: tritone = 6i
DEFINE: dim5 = 6i
DEFINE: p5 = 7i
DEFINE: min6 = 8i
DEFINE: maj6 = 9i
DEFINE: aug6 = 10i
DEFINE: min7 = 10i
DEFINE: maj7 = 11i
DEFINE: oct = 12i

DEFINE: consonantIntervals = [uni, min3, maj3, p4, p5, min6, maj6]
DEFINE: isConsonant(i) = flatten(i) in consonantIntervals
DEFINE: isConsonantP(p1, p2) = isConsonant(interval-bt(p1, p2))
DEFINE: isDissonant(i) = not isConsonant(i)
DEFINE: isDissonantP(p1, p2) = not isConsonantP(p1, p2)
